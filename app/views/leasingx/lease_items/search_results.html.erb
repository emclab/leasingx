<div id="main_body">
<h1><%=to_chn(:search_results)%> - 出租设备</h1>
<table>
  <tr>
    <th></th>  	
    <th>设备名称</th>
    <th>内容</th>
    <th>价格（￥/hr)</th>  
    <% if show_header_active_lease_item? %>
      <th>有效?</th>
    <% end %>
    <th></th>

 
  </tr>

<% @lease_items.each do |item| %>
  <tr>
    <td><%= link_to "View", SUBURI + "/view_handler?index=1&url=#{lease_item_path(item)}" %></td>  	
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><%= item.hourly_rate %></td>    
    <td><%= show_active_lease_item?(item) %></td>
    <td><%= link_to_edit_lease_item?(item) %></td>
  </tr>
<% end %>
</table>
<p>
  <%= new_lease_item? %> |
  <%= link_to to_chn(:search), search_lease_items_path %> |
  <%= link_to 'Back', SUBURI + "/view_handler?index=0" %>
</div>

