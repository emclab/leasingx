<%= simple_form_for @lease_item do |f| %>    
 
  <%= f.input :name, :label => "名称 ：" %> 
  <%= f.input :short_name, :label => "简称 ：", :hint => '2-4字' %>   
  <%= f.input :description, :label => "内容 ：" %> 
  <%= f.input :hourly_rate, :label => "￥/小时 ：" %>
  <%= f.input :active, :label => "有效? ：", :as => :radio_buttons %> 
  <%= f.button :submit %>  
<% end %> 


