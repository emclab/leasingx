<div id="main_body">
<h1><%=to_chn(:search)%> - 场地设备租赁</h1>
<%= simple_form_for @lease_booking, :method => :put, :url => { :action => 'search_results' } do |f| %>    
  <%= f.input :earliest_lease_date_search, :label => "开始日期 ：", :as => :string, :input_html => {:size => 40} %>
  <%= f.input :latest_lease_date_search, :label => "结束日期 ：", :as => :string, :input_html => {:size => 40} %>
  <%= f.input :customer_id_search, :collection => Customer.active_cust.where("biz_status = ?", '1').order('name'), :label_method => :name, :value_method => :id, :prompt => "选客户", :label => "客户 ："  %> 
  <%= f.input :lease_item_id_search, :collection => LeaseItem.active_lease_item.all(:order => 'name'), :label_method => :name, :value_method => :id, :prompt => "选设备", :label => "设备 ："  %> 
  <%= f.input :sales_id_search, :collection => Authentify::User.active_sales.all(:order => 'name'), :label_method => :name, :value_method => :id, :prompt => "选" + to_chn(:sales), :label => to_chn(:sales) + ":"  %>    
  <%= f.button :submit, to_chn(:search) %>  
<% end %> 
</div>
